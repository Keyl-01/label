.datamanager
  z-index 1
  position relative
  height calc(100vh - var(--header-height))

  // hack to change background of selected annotation in LSF inside DM
  #label-studio-dm [class*=Annotations_annotation_selected]
    background: #e3f1ff

.agreement
  &__review
    margin-bottom 18px
    color rgba(#000, 0.6)

    .userpic
      display inline-flex
      vertical-align middle

  &__state
    display inline

    &_result
      &_accepted
        color #2AA000

      &_rejected
        color #DD0000

      &_fixed
        color #FA8C16
