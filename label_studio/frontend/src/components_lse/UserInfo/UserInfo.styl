.user-info-popover
  top -999px
  left -999px
  position absolute
  margin-top -14px
  margin-left -13px
  z-index 100
  background-color #fff
  min-width 240px
  border 1px solid rgba(0, 0, 0, 0.08)
  box-shadow 0px 5px 10px rgba(#000, 0.1)

  &__header
    padding 10px 12px
    display flex
    align-items center

  &__user-info
    flex 1
    display flex
    margin-left 8px
    flex-direction column
    justify-content center

  &__name
    font-weight 500
    font-size 15px
    line-height 18px

  &__email
    font-size 14px
    line-height 16px
    color rgba(0, 0, 0, 0.4)

  &__content
    padding 12px
    border-top 1px solid rgba(0, 0, 0, 0.1)
