.org-switch
  z-index 10
  position relative
  padding-bottom 8px
  margin-bottom 16px
  border-bottom 1px solid rgba(0, 0, 0, 0.1)

  &_expanded
    margin -8px -8px 16px
    padding 8px
    border-bottom-color transparent
    box-shadow 0 0 0 9999px rgba(#000, 0.3)

  &__item
    height 56px
    display flex
    padding 0 11px
    flex-direction column
    border-radius 4px
    justify-content center
    font-weight 500
    color rgba(0, 0, 0, 0.6)

    &:not(&_disabled):hover,
    &_active
      cursor pointer
      background-color #efefef

  &__indicator
    width 16px
    height 16px
    color $accent_color
    transform rotate(90deg)

    &_open
      transform rotate(-90deg)

  &__subtitle
    opacity 0.6
    font-size 14px
    margin-bottom 3px
    font-weight normal

  &__list
    top 100%
    left 0
    width 100%
    padding 0 8px 8px
    position absolute
    background-color #fff
    box-sizing border-box

  &__org
    max-width: 170px
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap

  &__org-list
    max-width: 100%
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap