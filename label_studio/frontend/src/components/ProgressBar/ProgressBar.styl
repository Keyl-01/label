.progressBar
    border 1px solid rgba(0, 0, 0, 0.15)
    box-sizing border-box
    border-radius 4px
    position relative
    height 40px
    text-align center
    overflow: hidden

    &__text
        width 80%
        margin auto
        vertical-align middle
        height 40px
        line-height 40px

    &__done
        position absolute
        height 40px
        background rgba(0, 0, 0, 0.08)
